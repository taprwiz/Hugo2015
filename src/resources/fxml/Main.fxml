<BorderPane fx:id="root" xmlns:fx="http://javafx.com/fxml/1"
	xmlns="http://javafx.com/javafx/2.2">
	<!-- Header -->
	
	<top>
		<VBox spacing="20">
			<C3DToolbar>
				<leftItems>
					<C3DHamburger fx:id="titleBurger">
						<HamburgerBackArrowBasicTransition />
					</C3DHamburger>
					<Label>Google</Label>
				</leftItems>
				<rightItems>
					<Label>Menu</Label>
				</rightItems>
			</C3DToolbar>
		</VBox>
	</top>

	<!-- Content Area -->
	<center>
		<C3DDrawer fx:id="drawer" drawerWidth="250">
			<styleClass>
				<String fx:value="body" />
			</styleClass>
			<sidePane>
				<StackPane fx:id="sideContent">
				</StackPane>				
			</sidePane>
			<content>
				<StackPane fx:id="content" >
				</StackPane>				
			</content>
		</C3DDrawer>
	</center>
</BorderPane>