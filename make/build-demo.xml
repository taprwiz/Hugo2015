<?xml version="1.0" encoding="UTF-8"?>
<project name="JFoenix Demo" default="build-demo.jfx" basedir=".">
	<!-- Define the properties used by the build -->
	<property name="src" location="../demo" />
	<property name="build" location="build" />
	<property name="dist" location="dist" />
	<property name="libs" location="../libs" />
	<property name="main-class"  value="demos.MainDemo"/>
	
	

	<path id="path.jfx.lib">
		<fileset dir="${libs}">
			<include name="**/*.jar" />
		</fileset>
		<fileset dir="${dist}">
		    <include name="**/*.jar" />
	    </fileset>
	</path>

	<manifestclasspath property="jar.classpath" jarfile="${dist}/jfoenix.jar">
          <classpath refid="path.jfx.lib" />
    </manifestclasspath>
		
	<target name="clean" description="Delete old work and dist directories">
		<!-- Delete the ${build} and ${dist} directory trees -->
		<delete dir="${build}" />
	</target>
	
	<target name="init">
		<!-- Create the time stamp -->
		<tstamp />
		<!-- Create the build directory structure used by compile -->
		<mkdir dir="${build}" />
	</target>
	
	<target name="compile" depends="init" description="compile the source ">
		<!-- Compile the java code from ${src} into ${build} -->
		<javac srcdir="${src}" destdir="${build}" source="1.8" target="1.8">
			<classpath>
				<path refid="path.jfx.lib" />
			</classpath>
		<compilerarg value="-Xlint" />
		</javac>
	</target>
	
	<target name="run" depends="compile" description="Run the demo">
		<!-- Put everything in ${build} into the jfoenix.jar file -->
		     <java classname="${main-class}" fork="true">
	         </java>
	</target>
	
	<target name="build-demo.jfx" depends="clean,run">
		
	</target>
</project>